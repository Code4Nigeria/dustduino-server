{
  "name": "Sensor REST Api",
  "description": "REST API for dustDuino air quality sensors",
  "repository": "https://github.com/developmentseed/sensor-rest-api/tree/development",
  "keywords": [ "django", "arduino", "REST", "sensor" ],
  "addons": [
    "heroku-postgresql:hobby-dev"
  ],
  "env": {
    "DJANGO_SECRET_KEY": {
      "description": "Salt for hashing password",
      "generator": "secret"
    },
    "SITE_SUPERUSER_ID": {
      "description": "ID of the admin, should be different from 1",
      "value": 3423
    }, 
    "SITE_SUPERUSER_PASSWORD": {
      "description": "Password for superuser",
      "generator": "secret"
    }
  },
  "scripts": {
    "postdeploy": "python manage.py syncdb"
  }
}
